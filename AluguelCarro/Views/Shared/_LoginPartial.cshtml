@using Microsoft.AspNetCore.Identity
@inject SignInManager<Usuario> SignInManager
@inject UserManager<Usuario> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    
    <ul class="nav navbar-nav navbar-light">
        <li class="nav-item">
            <text class="text-white"> Olá, @UserManager.GetUserName(User)</text>
            <a class="btn btn-link navbar-btn navbar-link text-white" asp-controller="Usuarios" asp-action="Logout">Logout</a>
        </li>
    </ul>


}
</ul>
