@model AluguelCarro.ViewModels.RegistroViewModel


@{
    ViewData["Title"] = "Registro de novos usuários";
}


<div class="border border-light rounded shadow col-md-8">
    <div class="container">
        <h3 class="titulo"><i class="fas fas-user-lock fa-lg"></i>Registro de novos usuarios</h3>
        <hr />
        <div class="row">
            <div class="col-md-8">
                <form asp-action="Registro">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="campos">
                        <div class="form-group">
                            <label asp-for="Nome" class="control-label">Nome</label>
                            <input asp-for="Nome" class="form-control form-control-lg" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="campos">
                        <div class="form-group">
                            <label asp-for="CPF" class="control-label">CPF</label>
                            <input asp-for="CPF" class="form-control form-control-lg cpf" />
                            <span asp-validation-for="CPF" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="campos">
                        <div class="form-group">
                            <label asp-for="Telefone" class="control-label">Telefone</label>
                            <input asp-for="Telefone" class="form-control form-control-lg telefone" />
                            <span asp-validation-for="Telefone" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="campos">
                        <div class="form-group">
                            <label asp-for="NomeUsuario" class="control-label">Nome Usuario</label>
                            <input asp-for="NomeUsuario" class="form-control form-control-lg" />
                            <span asp-validation-for="NomeUsuario" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="campos">
                        <div class="form-group">
                            <label asp-for="Email" class="control-label">Email</label>
                            <input asp-for="Email" type="email" class="form-control form-control-lg" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="campos">
                        <div class="form-group">
                            <label asp-for="Senha" class="control-label">Senha</label>
                            <input asp-for="Senha" type ="password" class="form-control form-control-lg" />
                            <span asp-validation-for="Senha" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group botoes">
                        <input type="submit" value="Salvar" class="btn btn-outline-success btn-lg" /> &nbsp;
                        <a asp-action="Index" asp-controller="Home" class="btn btn-link btn-lg">Voltar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.maskedinput/1.4.1/jquery.maskedinput.min.js"></script>

<script>

    $(function () {
        $(".cpf").mask("999.999.999-99");
        $(".telefone").mask("(99) 9 9999-9999");
    }
        )


</script>



}
